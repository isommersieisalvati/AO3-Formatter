{
    "manifest_version": 3,
    "name": "Webpage Styler",
    "version": "1.0",
    "permissions": [
        "activeTab",
        "http://localhost/*",
        "http://127.0.0.1/*"
    ],
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self' http://localhost; object-src 'self'"
    }
}
