{
    "manifest_version": 3,
    "name": "AO3 Formatter",
    "version": "1.0.0",
    "permissions": ["activeTab"],
    "action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "js": ["content.js"]
        }
    ],
    "icons": {
        "16": "icon16.png"
    }
}
